<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailApp.Views.ItemDetailPage"
             Title="{Binding Title}">
    <ScrollView>
        <StackLayout Spacing="5" Padding="5">
            <Label Text="Name:" FontSize="Medium" />
            <Label Text="{Binding Item.Name}" FontSize="Small"/>
            <Label Text="Warnings:" FontSize="Medium" />
            <Label Text="{Binding Item.Warnings}" FontSize="Small"/>
            <Label Text="Description:" FontSize="Medium" />
            <Label Text="{Binding Item.Description}" FontSize="Small"/>
            <Label Text="Preapration:" FontSize="Medium"/>
            <Label Text="{Binding Item.PrepMethod}" FontSize="Small"/>
            <Label Text="Ingredients:" FontSize="Medium"/>
            <Label Text="{Binding Item.Ingredients}" FontSize="Small"/>
        </StackLayout>
    </ScrollView>
</ContentPage>