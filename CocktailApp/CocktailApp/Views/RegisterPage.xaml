<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailApp.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the register page!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Text="{Binding user.Email}" FontSize="Small" />
            <Label Text="Email" FontSize="Medium" />
            
            <Entry Text="{Binding user.Username}" FontSize="Small" />
            <Label Text="Username" FontSize="Medium" />
            
            <Entry Text="{Binding user.Password}" FontSize="Small" />
            <Label Text="Password" FontSize="Medium" />
            
            <Entry Text="{Binding user.Age}" FontSize="Small" />
            <Label Text="Age" FontSize="Medium" />
            
            <Button Text="Register" Clicked="Register_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>