<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailApp.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the register page!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            
            <Label Text="Email" FontSize="Medium" />
            <Entry TextChanged="Email_TextChanged" FontSize="Small" />
            
            <Label Text="Username" FontSize="Medium" />
            <Entry TextChanged="Username_TextChanged" FontSize="Small" />

            <Label Text="Password" FontSize="Medium" />
            <Entry TextChanged="Password_TextChanged" FontSize="Small" />

            <Label Text="Age" FontSize="Medium" />
            <Entry TextChanged="Age_TextChanged" FontSize="Small" />

            <Button Text="Register" Clicked="Register_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>