<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailApp.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Username" FontSize="Medium" />
            <Entry TextChanged="Username_TextChanged" FontSize="Small" />
            <Label Text="Password" FontSize="Medium" />
            <Entry TextChanged="Password_TextChanged" FontSize="Small" />
            <Button Text="Login"
                Clicked="Login_Clicked" />
            <Button Text="Register"
                    Clicked="Register_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>